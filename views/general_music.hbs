            <label for="comment">Message:</label>
            <textarea class="form-control" rows="5" id="comment"></textarea>
        </div>
    </div>
</form>



<script type="text/javascript">
function createDiv() {
  with (document) {
    var form = createElement('form');
    with (form) {
        var maindiv = document.createElement("div");
        var lebl1 = document.createElement("div");
        var lebl2 = document.createElement("div");


        var label1 = document.createElement("Label");
        label1.innerHTML = "Thread Title:";
        lebl1.appendChild(label1);

        var input = document.createElement("input")
        input.setAttribute("style", "border-radius:2%");
        input.setAttribute("size", "85%");
        input.setAttribute("id", "lolty")
        lebl1.appendChild(input)

        var label2 = document.createElement("Label");
        label2.innerHTML = "Message:";
        lebl2.appendChild(label2)
        var textarea = document.createElement("textarea");
        textarea.setAttribute("rows", "5");
        textarea.setAttribute("id", "lol")
        lebl2.setAttribute("style", "padding:1%");
        lebl1.setAttribute("style", "padding:1%");
        lebl2.appendChild(textarea)
        textarea.setAttribute("style", "width:300px");
        textarea.setAttribute("style", "margin:auto");
        form.setAttribute("id", "that");


      maindiv.appendChild(lebl1);
      maindiv.appendChild(lebl2);
      form.appendChild(maindiv);
    }
    getElementById('userAddedDiv').appendChild(form);
  }

}

document.write(
  '<div id="userAddedDiv" class="modal-content"></div>' +
  '<div id="leftbox" ><a href="javascript:createDiv();" class="createBoxButton">Create Thread</a></div>'
);
</script>

