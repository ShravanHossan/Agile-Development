<!DOCTYPE html>

<html>

<head>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="../public/css/threadlist.css">
<link rel="stylesheet" href="../public/css/general.css">
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>@import url('https://fonts.googleapis.com/css?family=Monoton');</style>
  
</head>
<style type="text/css">

#userAddedDiv {
  margin-bottom: 3%;
  padding: 1%;
}
.createBoxButton {
  display:inline-block;
  padding:2px 8px;
  vertical-align:middle;
  text-decoration:none;
  color:#000;
  background:blue;
  border:2px solid #888;
  border-radius:8px;
}

.createBoxButton:active,
.createBoxButton:hover {
  background:#DDD;
}
#leftbox {
  right: 20px;
  top: 20%;
  position: absolute;

}

#lol {
  width: 98%;
  border-radius: 2%;
  border:1px solid #888;

  /*background-color: blue;*/
}

#lolty {
  width: 98%;
  border-radius: 2%;
  border:1px solid #888;

  /*background-color: blue;*/
}
</style>

<body>
    {{> navbar}}
    <br><br>

    <div class="container">
        <h1>Thread List</h1>
    </div>

    <br>
    <!--Added a accordion to house the threads-->
    <div class="accordion" id="threadlist">
        <!--Cards to contain each of the threads-->
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Thread #1
                    </button>
                </h5>
            </div>
            <!--The thread text that will appear when you click the thread title-->
            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#threadlist">
                <div class="card-body">
                     This is just a filler text for the thread.
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="headingTwo">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Thread #2
                    </button>
                </h5>
            </div>
            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#threadlist">
                <div class="card-body">
                    This is just a filler text for the thread.
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="headingThree">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        Thread #3
                    </button>
                </h5>
            </div>
            <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#threadlist">
                <div class="card-body">
                      This is just a filler text for the thread.
                </div>
            </div>
        </div>
    </div>

<br>

<form class="modal-content">
    <div class="container">
        <div class="form-group">
            <label for="usr">Thread Title:</label>
            <input type="text" class="form-control" id="usr">
        </div>
        <div class="form-group">
            <label for="comment">Message:</label>
            <textarea class="form-control" rows="5" id="comment"></textarea>
        </div>
    </div>
</form>



<script type="text/javascript">
function createDiv() {
  with (document) {
    var form = createElement('form');
    with (form) {
        var maindiv = document.createElement("div");
        var lebl1 = document.createElement("div");
        var lebl2 = document.createElement("div");


        var label1 = document.createElement("Label");
        label1.innerHTML = "Thread Title:";
        lebl1.appendChild(label1);

        var input = document.createElement("input")
        input.setAttribute("style", "border-radius:2%");
        input.setAttribute("size", "85%");
        input.setAttribute("id", "lolty")
        lebl1.appendChild(input)

        var label2 = document.createElement("Label");
        label2.innerHTML = "Message:";
        lebl2.appendChild(label2)
        var textarea = document.createElement("textarea");
        textarea.setAttribute("rows", "5");
        textarea.setAttribute("id", "lol")
        lebl2.setAttribute("style", "padding:1%");
        lebl1.setAttribute("style", "padding:1%");
        lebl2.appendChild(textarea)
        textarea.setAttribute("style", "width:300px");
        textarea.setAttribute("style", "margin:auto");
        form.setAttribute("id", "that");


      maindiv.appendChild(lebl1);
      maindiv.appendChild(lebl2);
      form.appendChild(maindiv);
    }
    getElementById('userAddedDiv').appendChild(form);
  }

}

document.write(
  '<div id="userAddedDiv" class="modal-content"></div>' +
  '<div id="leftbox" ><a href="javascript:createDiv();" class="createBoxButton">Create Thread</a></div>'
);
</script>

