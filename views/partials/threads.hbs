

{{#each objects}}
    {{@Index}}
    <div class="card border-0" >
        <div class="card-header threadCardHeader" id={{_id}} data-toggle="collapse" data-target='#collapse{{_id}}'>
            <h5 class="mb-0">
                <button class="btn btn-link" type="button"  aria-expanded="true" aria-controls='collapse{{_id}}'>
                    {{Title}}
                    <small>&lt{{Email}}&gt</small>
                </button>
            </h5>
        </div>

        <div id='collapse{{_id}}' class="collapse" aria-labelledby={{_id}}   data-parent="#generalThreads">
            <div class="card-body">
                {{Message}}
                <div class="row commentTopMargin">
                    <div class="col-md-4">&nbsp;</div>
                    <div class="accordion col-md-8" id='accordion{{_id}}'>
                    <div class="card border-0">
                        <div class="card-header" data-toggle="collapse" data-target='#comments{{_id}}'>
                            <h5 class="mb-0">
                                <button class="btn btn-link" type="button">
                                    Comments
                                </button>
                            </h5>
                        </div>
                        <div id='comments{{_id}}' class="collapse" data-parent='#accordion{{_id}}'>
                            <div class="card-body">
                                {{Comments}}
                                Comments go here
                            </div>
                        </div>
                    </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

{{/each}}
